@model MonochromePolarAreaChartModel

@{
    ViewData["Title"] = "Monochrome Polor Chart";
}

<div id="chart"></div>
@section scripts {
    <script>
        const _series = @JsonConvert.SerializeObject(Model.SerieDatas);
        const _labels = @Html.Raw(JsonConvert.SerializeObject(Model.Labels));
        var options = {
            series: _series,
            chart: {
                width: 380,
                type: 'polarArea'
            },
            labels: _labels,
            fill: {
                opacity: 1
            },
            stroke: {
                width: 1,
                colors: undefined
            },
            title: {
                text: 'Monochrome Polar Area Chart'
            },
            yaxis: {
                show: false
            },
            legend: {
                position: 'bottom'
            },
            plotOptions: {
                polarArea: {
                    rings: {
                        strokeWidth: 0
                    },
                    spokes: {
                        strokeWidth: 0
                    },
                }
            },
            theme: {
                monochrome: {
                    enabled: true,
                    shadeTo: 'light',
                    shadeIntensity: 0.6
                }
            }
        };

        var chart = new ApexCharts(document.querySelector("#chart"), options);
        chart.render();
    </script>
}